<?php

declare(strict_types=1);

namespace App\Connection\builder;

class ConnectionBuilder implements IConectionBuilder
{
  private  Url $address;
  private ?LoopInterface $loop
   public function __construct(string $address){
      $this->url = URL::fromAddress($address);
   }
  
  public function setAddress(string $addres): self {
   $this->address = URL::fromAddress($address);
   return $this;
  }
  
     public function setUrl(string $url): self {
        $this->address = $this->address->setUrl($url);
        return $this;
     }
     
      public function setConnectionType(ConnectionType $type): self;
        $this->address = $this->address->setType($type);
        return $this;
     }
     
         public function setPort(string $port): self;
        $this->address = $this->address->setPort($port);
        return $this;
     }
     
     public function setLoop(?LoopInterface $loop): self;
     {
        $this->loop = $loop;
     }
}
